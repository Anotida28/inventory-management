generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  username     String        @unique
  password     String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[] @relation("UserTransactions")
  attachments  Attachment[]  @relation("UserAttachments")
}

model ItemType {
  id        Int           @id @default(autoincrement())
  name      String
  code      String
  isActive  Boolean       @default(true)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  itemtype   String?
  batches   Batch[]
  transactions Transaction[]
}

model Batch {
  id          Int           @id @default(autoincrement())
  itemTypeId  Int
  batchCode   String
  qtyReceived Int
  qtyIssued   Int           @default(0)
  unitCost    Float?
  totalCost   Float?
  receivedAt  DateTime
  notes       String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  itemType    ItemType      @relation(fields: [itemTypeId], references: [id])
  transactions Transaction[]
}

model Transaction {
  id           Int               @id @default(autoincrement())
  type         String
  status       String            @default("POSTED")
  createdAt    DateTime          @default(now())
  itemTypeId   Int
  batchId      Int?
  qty          Int
  unitCost     Float?
  totalCost    Float?
  unitPrice    Float?
  totalPrice   Float?
  issuedToType String?
  issuedToName String?
  createdById  Int
  notes        String?
  
  itemType     ItemType          @relation(fields: [itemTypeId], references: [id])
  batch        Batch?            @relation(fields: [batchId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  createdBy    User              @relation("UserTransactions", fields: [createdById], references: [id])
  attachments  Attachment[]

  @@index([itemTypeId])
  @@index([batchId])
  @@index([createdById])
  @@index([type])
  @@index([status])
  @@index([issuedToType])
}

model Attachment {
  id            Int        @id @default(autoincrement())
  transactionId Int
  fileName      String
  mimeType      String?
  size          Int?
  path          String
  uploadedAt    DateTime   @default(now())
  uploadedById  Int

  transaction   Transaction @relation(fields: [transactionId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  uploadedBy    User        @relation("UserAttachments", fields: [uploadedById], references: [id])

  @@index([transactionId])
  @@index([uploadedById])
}
